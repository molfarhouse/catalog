<h1>Каталог товарів Molfarhouse</h1>
<p style="text-align:center;">Натисніть на товар, щоб відкрити фото у повному розмірі</p>

<div id="catalog" class="grid"></div>

<script>
    async function loadCatalog() {
        const response = await fetch("https://api.github.com/repos/molfarhouse/catalog/contents/");
        const files = await response.json();

        let html = "";

        for (const file of files) {
            if (file.type === "file" && /\.(jpg|jpeg|png|webp)$/i.test(file.name)) {
                html += `
                    <div class="item">
                        <a href="${file.download_url}" target="_blank">
                            <img src="${file.download_url}">
                        </a>
                        <div class="item-name">${file.name}</div>
                    </div>
                `;
            }
        }

        document.getElementById("catalog").innerHTML = html;
    }

    loadCatalog();
</script>

</body>
</html>
